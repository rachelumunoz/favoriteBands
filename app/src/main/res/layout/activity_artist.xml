<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="130dp"
        android:layout_height="40dp"

        android:layout_alignTop="@+id/artist_favorite_icon"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/artist_favorite_icon"
        android:gravity="center_horizontal"
        android:text="@string/default_artist_name"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/artist_favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/artist_image"
        android:layout_below="@+id/artist_image"
        android:layout_marginTop="50dp"
        android:src="@drawable/favorite_false"/>

    <TextView
        android:id="@+id/event_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/artist_name"
        android:layout_below="@+id/artist_name"
        android:layout_marginStart="-30dp"
        android:text="@string/event_label"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/event_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_label"
        android:layout_alignBaseline="@id/event_label"
        android:layout_marginStart="10dp"
        android:text="@string/default_count"/>

    <TextView
        android:id="@+id/tracker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_count"
        android:layout_alignBaseline="@id/event_count"
        android:text="@string/tracker_label"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tracker_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/event_count"
        android:layout_toRightOf="@id/tracker_label"
        android:layout_marginStart="10dp"
        android:text="@string/default_count"/>

   

</RelativeLayout>
